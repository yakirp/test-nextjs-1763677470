{
  "name": "terminal-news-summary",
  "version": "0.1.0",
  "description": "Terminal-based news summarization app with TUI interface and AI-powered summaries",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "news-sum": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "keywords": [
    "news",
    "summarization",
    "terminal",
    "tui",
    "ai",
    "llm",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ink": "^5.0.1",
    "react": "^18.3.1",
    "openai": "^4.73.1",
    "commander": "^12.1.0",
    "cheerio": "^1.0.0",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "typescript": "^5.7.2",
    "tsx": "^4.19.2",
    "prettier": "^3.4.2",
    "eslint": "^9.17.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
